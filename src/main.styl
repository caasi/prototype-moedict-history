@import 'nib'

global-reset()

html, body, #app
  height 100%
html
  font-size 16pt
body
  font-family 'Noto Sans', sans-serif
  background #16161d

#app
  position relative
  overflow hidden
  .now
    position absolute
    top 50%
    left 4rem
    margin-top -0.5rem
    color #f90
    &:before, &:after
      content ''
      position absolute
      top  50%
      margin-top -1px
      border-top 2px solid #f90
    &:before
      right 105%
      width 4rem
    &:after
      left 105%
      width 1000%
  .history
    position absolute
    top 50%
    width 100%
    margin-top -1rem
    .event
      position absolute
      left 16rem
      background white
      line-height 1.4rem
